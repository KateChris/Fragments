    <com.lovejjfg.fragments.widget.CurveView
        android:id="@+id/ts"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/uc"
        android:visibility="visible"/>

    <!--<TextView-->
